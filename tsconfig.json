{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}